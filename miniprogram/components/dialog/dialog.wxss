/* components/addTodoItem/addTodoItem.wxss */

.op {
  position: fixed;
  bottom: 0;
  z-index: 99;
  top: 0;
  width: 100%;
  opacity: 0.5;
  background-color: black;
}

.wrapper {
  position: fixed;
  z-index: 100;
  top: 200px;
  width: 100%;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  box-sizing: border-box;
}

.wrapper>.inner {
  width: 500rpx;
  overflow: hidden;
  border-radius: 20rpx;
  background: #eff5f6;
}

.wrapper  >.inner >.line {
  width: 100%;
  height: 5px;
  background-image: linear-gradient(270deg, #12e9d1 0%, #00a4ff 100%);
}

.wrapper>.inner> .header {
  padding: 28rpx 0;
  display: flex;
  justify-content: center;
  font-family: PingFangSC-Medium;
  font-size: 16px;
  color: #1d3041;
}

.wrapper  >.inner >.line {
  background-image: linear-gradient(270deg, #12e9d1 0%, #00a4ff 100%);
}

.wrapper  >.inner > input {
  margin: 0rpx 24rpx;
  background: #eff5f6;
  border: 1px solid #fff;
  box-shadow: inset 5px 5px 12px 0 rgba(117, 132, 143, 0.08), inset -5px -5px 12px 0 #fff;
  border-radius: 20rpx;
  height: 100rpx;
  padding: 0 30rpx;
}

.wrapper  >.inner .picker {
  margin: 16rpx 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #999;
}

.wrapper  >.inner>.buttons {
  background-color: #fff;
  margin-top: 50rpx;
  height: 90rpx;
  display: flex;
}

.buttons .cancel {
  font-family: PingFangSC-Medium;
  color: #ccc;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50%;
}

.buttons .confirm {
  font-family: PingFangSC-Medium;
  color: #008bff;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50%;
}
