.tag {
  border: 1rpx solid #eee;
  margin: 20rpx;
  overflow: hidden;
  border-radius: 12rpx;
}

.tag > .tagTitle {
  display: flex;
  justify-content: space-between;
  background: #eee;
  padding: 15rpx 30rpx;
}

.tag > .tagTitle >.operation {
  display: flex;
}

.tag > .tagTitle >.operation>.addTodoItem {
  margin: 0 20rpx;
}

.tag > .todoItem {
  display: flex;
  height: 90rpx;
  align-items: center;
  padding: 10rpx 30rpx;
}

.todoItem .toggleButton {
  border-radius: 100%;
  height: 20px;
  width: 20px;
  margin-right: 10px;
  border: 1px solid #ddd;
}

.todoItem.completed > text {
  color: #ccc;
}

.todoItem .slideViewCell {
  display: flex;
  height: 70rpx;
  align-items: center;
}

.todoItem.completed  .toggleButton {
  display: flex;
  justify-content: center;
  align-items: center;
}

.addTagBtn {
  margin-bottom: 40rpx;
}
