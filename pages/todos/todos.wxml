<view wx:for="{{todoListByTag}}" wx:for-item="items" wx:key="tag" class="tag">
  <view>
    <text>{{items.tag}}</text>
    <button size="mini" bindtap="addTodoItem" id="{{items.tag}}">+</button>
  </view>
  <view wx:for="{{items.data}}" wx:for-item="item" wx:key="id" class="todoItem">
    <view bindtap="handleComplete" id="{{item.id}}" class="completeButton {{item.completed?'completed':''}}"></view>
    <text>{{item.value}}</text>
  </view>
</view>
<button bindtap="addTag">+</button>

<addTodoItem placeholder="待办名称" visible="{{displayAddTodoItem}}" bindconfirm="comfirm" bindcancel="cancel"></addTodoItem>