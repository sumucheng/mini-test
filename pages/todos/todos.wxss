.header {
  margin: 20rpx;
  padding: 10rpx 30rpx; 
}

.header > .percentText {
  padding-bottom: 20rpx;
}

.tag {
  border: 1rpx solid #eee;
  margin: 20rpx;
  border-radius: 12rpx;
}

.tag > .tagTitle {
  display: flex;
  justify-content: space-between;
  background: #eee;
  padding: 10rpx 30rpx;
}

.tag > .todoItem {
  display: flex;
  height: 90rpx;
  align-items: center;
  padding: 10rpx 30rpx;
}

.todoItem > .toggleButton {
  border-radius: 100%;
  height: 20px;
  width: 20px;
  margin-right: 10px;
  border: 1px solid #ddd;
}

.todoItem.completed > text {
  color: #ccc;
}

.todoItem.completed  > .toggleButton {
  border-color: #fff;
}
