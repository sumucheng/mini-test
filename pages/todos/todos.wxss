.todo-input {
  border: 1rpx solid #ddd;
  margin: 30rpx;
  height: 90rpx;
  padding-left: 20rpx;
  border-radius: 8rpx;
}

.todoItem {
  display: flex;
  height: 90rpx;
  align-items: center;
  margin: 30rpx;
  padding-left: 20rpx;
  border: 1rpx solid #ccc;
  border-radius: 8rpx;
}

.completeButton {
  border-radius: 100%;
  height: 20px;
  width: 20px;
  margin-right: 10px;
  border: 1px solid #ddd;
}

.completeButton.completed {
  background-color: red;
}
